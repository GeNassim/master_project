<!DOCTYPE html>

<title>Clients index</title>

{% block body %}
    <h1>Clients index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.firstname }}</td>
                <td>{{ client.email }}</td>
                <td>
                    <a href="{{ path('app_clients_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('app_clients_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {#<a href="{{ path('app_clients_new') }}">Create new</a>#}
{% endblock %}
