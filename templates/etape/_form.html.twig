<form action="{{ path("app_etape_new", {'id':campagne.id}) }}" method="POST" >

    <div class="row">
        
        <div class="col-md-12">
            <div class="tile" style="color:#bacbe6">
                <div class="row">
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="inputUsernameEmail">Nom de l'utilisateur *</label>
                                    <input type="text" required="required" 
                                    class="form-control" value="{{app.user.username}}" 
                                    name="_username" id="username">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="inputUsernameEmail">Email de l'utilisateur *</label>
                                    <input type="text" required="required" 
                                    class="form-control" value="{{app.user.email}}" 
                                    name="_useremail" id="useremail">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="inputUsernameEmail">Sujet de l'étape *</label>
                                    <input type="text" required="required" 
                                    class="form-control" value="" 
                                    name="_sujet" id="sujet">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="inputUsernameEmail">Le contenu du message *</label>
                                    <textarea type="text" required="required" 
                                    class="form-control" value="" 
                                    name="_corps" id="corps"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        
                        <div class="row">

                            
                                <div class="card bg-black">
                                    <div class="card-body" style="margin:0;padding:17px 0px">
                                        <h6 class="card-title">A quel moment envoyer votre étape</h6>
                                        
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="inputUsernameEmail">Délai *</label>
                                                    <input type="number" required="required" 
                                                    class="form-control" name="_delai" id="delai">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="inputUsernameEmail">Temps *</label>
                                                    <select type="select" name="_temps" id="temps"  class="form-control" style="width:100%" required="required">
                                                        <option style="background:black" value="minutes">Minutes ></option>
                                                        <option style="background:black" value="heures">Heures ></option>
                                                        <option style="background:black" value="jours">Jours ></option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>Envoyer après cet e-mail</label>
                                            <select name="ordre" class="form-control js-example-basic-multiple" multiple="multiple" style="width:100%">
                                                {% for etape in etapes %}
                                                    <option style="cursor:pointer" value="{{etape.id}}">* {{etape.sujet}}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="tile-footer">
                            <button name="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
                            &nbsp;&nbsp;&nbsp;
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Fermer</button>
                        </div>
                    </div>
                </div>
            </div>
        
        </div>
    </div>
</form>
