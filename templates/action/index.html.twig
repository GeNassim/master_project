<!DOCTYPE html>

<title>Action index</title>

{% block body %}
    <h1>Action index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for action in actions %}
            <tr>
                <td>{{ action.id }}</td>
                <td>
                    <a href="{{ path('app_action_show', {'id': action.id}) }}">show</a>
                    <a href="{{ path('app_action_edit', {'id': action.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_action_new') }}">Create new</a>
{% endblock %}
