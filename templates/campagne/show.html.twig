{% extends "layout/template.html.twig" %}

{% block title %}show campagne{% endblock %}

{% block body %}
    <h1>Campagne</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ campagne.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ campagne.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ campagne.description }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ campagne.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ campagne.createdAt ? campagne.createdAt|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_campagne_index') }}">back to list</a>

    <a href="{{ path('app_campagne_edit', {'id': campagne.id}) }}">edit</a>

    {{ include('campagne/_delete_form.html.twig') }}
{% endblock %}
